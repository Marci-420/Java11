<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="147.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sudoku2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox alignment="BASELINE_CENTER" prefHeight="100.0" prefWidth="200.0">
        <children>
          <Label text="Új feladvány mérete:">
            <HBox.margin>
               <Insets right="150.0" />
            </HBox.margin>
            <padding>
               <Insets right="10.0" />
            </padding>
         </Label>
            <Button fx:id="minus" alignment="TOP_CENTER" onAction="#minusButtonClick" prefHeight="25.0" prefWidth="26.0" text="-" textAlignment="CENTER">
            <VBox.margin>
               <Insets />
            </VBox.margin></Button>
            <Label fx:id="size" text="4" textAlignment="CENTER">
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <HBox.margin>
                    <Insets left="10.0" right="10.0" />
                </HBox.margin></Label>
            <Button fx:id="plus" mnemonicParsing="false" onAction="#plusButtonClick" text="+" textAlignment="RIGHT" />
        </children>
    </HBox>
    <Label text="Kezdőállapot:">
      <VBox.margin>
         <Insets right="270.0" />
      </VBox.margin></Label>
    <TextField fx:id="nums" onAction="#sizetextfield">
      <VBox.margin>
         <Insets left="10.0" />
      </VBox.margin></TextField>
    <HBox prefHeight="100.0" prefWidth="200.0">
        <children>
            <Label prefHeight="17.0" prefWidth="100.0" text="Hossz:">
                <HBox.margin>
                    <Insets left="10.0" />
                </HBox.margin>
                <padding>
                    <Insets left="20.0" />
                </padding>
            <VBox.margin>
               <Insets left="30.0" />
            </VBox.margin>
            </Label>
            <Label fx:id="size2" text="0">
            <HBox.margin>
               <Insets left="40.0" />
            </HBox.margin></Label>
         <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="36.0" text="Ellenőrzés">
            <HBox.margin>
               <Insets left="250.0" />
            </HBox.margin>
            <padding>
               <Insets left="100.0" />
            </padding>
         </Button>
        </children></HBox>
</VBox>
